<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewLabelOfReleaseYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Год"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerViewTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLabelOfReleaseYear" />

    <TextView
        android:id="@+id/textViewLabelOfName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название выпуска"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewLabelOfReleaseYear"
        app:layout_constraintStart_toEndOf="@+id/textViewLabelOfReleaseYear"
        app:layout_constraintTop_toTopOf="@+id/textViewLabelOfReleaseYear" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Кол."
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewLabelOfName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewLabelOfName" />
</androidx.constraintlayout.widget.ConstraintLayout>